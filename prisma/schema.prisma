// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        String @id @default(dbgenerated("gen_random_uuid()"))  @db.Uuid
  firstname                 String
  lastname                  String
  pseudo                    String @unique
  phone                     String?
  email                     String @unique
  password                  String
  authTokens                String[]
  profile                   Profile?
  listOfEventsCreated       Event[] @relation("event_created")
  listOfEventsToAttend      Event[]
  listOfmessage             Message[]
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

model Profile{
  id                        String @id  @default(dbgenerated("gen_random_uuid()"))  @db.Uuid
  bio                       String?
  picture                   String?
  hobbies                   String?
  userId                    String @unique @db.Uuid
  user                      User @relation(fields: [userId], references: [id])
}

model Event{
  id                        String @id  @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title                     String @db.Char(50)
  description               String
  schedule                  String
  images                    String[] @default([])
  address                   String
  limit                     String  @default("20")
  inclusive                 InclusionType[]
  creatorId                 String @db.Uuid
  creator                   User @relation("event_created",fields: [creatorId], references: [id])
  listOfAttendees           User[] 
  chat                      Message[]
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

model Message{
  id                        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  conversation              String
  authorId                  String @db.Uuid
  author                    User @relation(fields: [authorId], references: [id])
  eventId                   String @db.Uuid
  event                     Event @relation(fields: [eventId], references: [id])
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

enum InclusionType {
  HALAL
  VEGAN
  VEGE
  CASHER
  STANDARD                 
}